nav{box-shadow:0 2px 2px -2px rgba(0,0,0,.2);position:fixed;top:0;left:0;width:100%;background-color:var(--color-base-lightest);padding:10px 0}#content{margin-top:100px}nav .container{display:grid;grid-template-columns:1fr auto auto;align-items:center}nav li{display:inline-block;list-style:none}nav ul a{text-decoration:none;margin-left:20px;color:var(--color-base-dark)}.hero{linear-gradient(var(--color-primary), var(--color-secondary))}:root{--color-primary: #9741eb;--color-secondary: #ce35e7;--color-accent: #ff9358;--color-base-lightest: #ffffff;--color-base-dark: #3c3c3c;--color-base-darker: #343434;--color-base-darkest: #000000}:root{--font-main: 'Lato', sans-serif}:root{--max-width: 1200px}body{font-family:var(--font-main);margin:0}.container{max-width:var(--max-width);margin:0 auto;padding:0 20px}ul{margin:0;padding:0}.button{padding:10px 20px;background-color:var(--color-accent)}.button:hover{box-shadow:.5rem .5rem 0 0 rgba(113,91,210,.1);background-color:var(--color-primary);color:var(--color-base-lightest)}