nav{box-shadow:0 2px 2px -2px rgba(0,0,0,.2);position:fixed;top:0;left:0;width:100%;background-color:var(--color-base-lightest);padding:10px 0}.container{display:grid;grid-template-columns:1fr auto auto;align-items:center}#content{margin-top:100px}ul#main-menu li{display:inline-block;list-style:none}.hero{linear-gradient(var(--color-primary), var(--color-secondary))}:root{--color-primary: #61d4ff;--color-secondary: #91ff84;--color-tertiary: #fffc7d;--color-base-lightest: #ffffff;--color-base-dark: #3c3c3c;--color-base-darker: #343434;--color-base-darkest: #000000}:root{--font-main: 'Lato', sans-serif}:root{--max-width: 1200px}body{font-family:var(--font-main);margin:0}.container{max-width:var(--max-width);margin:0 auto}ul{margin:0;padding:0}